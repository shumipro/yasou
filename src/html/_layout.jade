- var page= {}
- page.siteName = ''
- page.titleSeparation = ''

doctype html
html.client
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1, minimal-ui")
    
    block styles
      link(type="text/css"  href="http://fonts.googleapis.com/css?family=Roboto:300,400' rel='stylesheet" media="all")
      link(type="text/css", rel="stylesheet", media="all", href="/styles/client/view.css")
    
    block scripts
      script.
        //window.PRELOAD_DATA = {{.PreloadData}};
    
    title
      block html_title
        | #{page.siteName}
  
  block root
    body(role="document")
      block body
        block content
        block body_scripts
          script(type="text/javascript", src="/scripts/client.js")
